{
    email {$CADDY_EMAIL}
    # On-demand TLS for subdomains
    on_demand_tls {
        ask http://django:8000/api/sites/check-subdomain/
    }
    local_certs
}

# Local Development & Dashboard
localhost, dash.localhost, dash.vofino.ir {
    handle_path /static/* {
        root * /app/staticfiles
        file_server
    }

    handle_path /media/* {
        root * /app/media
        file_server
    }

    handle /api/* {
        reverse_proxy django:8000 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
        }
    }

    handle /admin/* {
        reverse_proxy django:8000 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
        }
    }

    handle {
        reverse_proxy frontend:3000 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
        }
    }

    log {
        output file /var/log/caddy/dashboard_access.log
    }
}

# Production Main Site & User Subdomains
vofino.ir, www.vofino.ir, *.vofino.ir {
    tls {
        on_demand
    }

    handle_path /static/* {
        root * /app/staticfiles
        file_server
    }

    handle_path /media/* {
        root * /app/media
        file_server
    }

    handle /api/* {
        reverse_proxy django:8000 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
        }
    }

    handle /admin/* {
        reverse_proxy django:8000 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
        }
    }

    handle {
        reverse_proxy frontend:3000 {
            header_up Host {host}
            header_up X-Real-IP {remote_host}
        }
    }

    log {
        output file /var/log/caddy/frontend_access.log
    }
}
